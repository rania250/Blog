{% extends 'base.html.twig' %}

{% block title %} Articles de la categorie : {{ category.name }} {% endblock %}



{% block body %}
    <div class="articles-infos">
        <p> Articles de la categorie : <strong>{{ category.name }}</strong> </p>
        <strong>{{articles | length}}</strong> articles retrouv√©s
    </div>
    <div class="articles">
        {% for article in articles %}
            <a href="/article/{{article.slug}}" class="article-item">
                <div class="article-image">
                    <img src= "{{ article.imageUrl }}"  alt=" {{ article.title }}" loading="lazy">
                </div>
                <div class="article-details flex">
                    <div class="article-author-details">
                        <div class="article-author-picture">
                                <img src="/_assets/images/avatar_jstore.webp"  alt="{{article.author.fullname}}" loading="lazy">
                        </div>
                    </div>
                    <div class="article-content-details">
                        <h2 class="article-title"> {{ article.title }} </h2>
                        <div class="article-createdAt"> le {{ article.createdAtFrench }} </div>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>

{% endblock %}
